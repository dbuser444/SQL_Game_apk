<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Статус: Запрос готов к выполнению -->
    <TextView
        android:id="@+id/query_result_ready"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Нажмите 'Выполнить', чтобы увидеть результат."

        android:textSize="14sp"
        android:paddingStart="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <!-- Статус: Успех с результатами (для SELECT) -->
    <LinearLayout
        android:id="@+id/query_result_success_rows"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"
        tools:background="#E8F5E9">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_circle"
            android:contentDescription="Успех"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Запрос выполнен успешно."
            android:textSize="14sp"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- Статус: Ошибка выполнения -->
    <LinearLayout
        android:id="@+id/query_result_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"
        tools:background="#FFEBEE">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Ошибка"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ошибка SQL-запроса."
            android:textSize="14sp"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- Статус: Неправильный ответ (для проверочных заданий) -->
    <LinearLayout
        android:id="@+id/query_result_incorrect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"
        tools:background="#FFF3E0">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Неверный результат"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Запрос выполнен, но результат не соответствует ожидаемому."

            android:textSize="14sp"
            android:paddingStart="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>