<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Номер задания (слева) -->
    <TextView
        android:id="@+id/text_task_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/primary_dark"
        android:layout_marginEnd="12dp"
        tools:text="1." />

    <!-- Краткое описание / Заголовок задания -->
    <TextView
        android:id="@+id/text_task_prompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="14sp"
        android:textColor="@color/primary_dark"
        tools:text="Выборка всех имен воинов"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- Иконка статуса (справа) -->
    <ImageView
        android:id="@+id/image_task_status_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="12dp"
        android:contentDescription="@string/task_status_icon_desc"
        tools:src="@drawable/ic_circle_outline"
        app:tint="@color/gren" />

</LinearLayout>