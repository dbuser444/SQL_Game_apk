<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".LessonsActivity">

    <!-- Заголовок и Профиль Пользователя -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Имя пользователя -->
            <TextView
                android:id="@+id/text_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/design_default_color_primary_dark"
                tools:text="SQL Master" />

            <!-- Статистика: Уровень, XP, Кристаллы -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/text_level"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    tools:text="Уровень: 5"
                    android:text="@string/text_level_placeholder" />

                <TextView
                    android:id="@+id/text_xp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="#424242"
                    tools:text="XP: 1200"
                    android:text="@string/text_xp_placeholder" />
            </LinearLayout>

            <!-- Кристаллы -->
            <TextView
                android:id="@+id/text_crystals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawablePadding="4dp"
                android:textSize="14sp"
                android:textColor="#424242"
                tools:text="Кристаллы: 15"
                android:text="@string/text_crystals_placeholder" />

            <!-- Кнопка Выход -->
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/button_logout"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/design_default_color_error"
                android:textColor="@color/design_default_color_error"/>


            <!-- НОВАЯ КНОПКА: Установить Напоминание -->
            <Button
                android:id="@+id/btn_set_reminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Установить ежедневное напоминание"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@color/design_default_color_primary"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:gravity="start|center_vertical" />
            <!-- - КОНЕЦ СЕКЦИИ НАПОМИНАНИЙ - -->

            <!-- Загрузочный оверлей -->
            <FrameLayout
                android:id="@+id/loading_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B3FFFFFF"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                android:contentDescription="@string/content_desc_loading_overlay"
                tools:visibility="gone">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:text="@string/loading_profile"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="16sp" />
            </FrameLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Заголовок Секции Уроков -->
    <TextView
        android:id="@+id/text_lessons_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/lessons_header_title"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_profile" />

    <!-- Список Уроков -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_lessons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false"
        android:contentDescription="@string/content_desc_lessons_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_lessons_header"
        tools:listitem="@layout/item_lesson_card"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</androidx.constraintlayout.widget.ConstraintLayout>