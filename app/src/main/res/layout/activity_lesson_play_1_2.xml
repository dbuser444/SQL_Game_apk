<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sql_game.LessonPlayActivity">

    <!-- Верхняя панель (Toolbar) - ВОССТАНОВЛЕНА ОРИГИНАЛЬНАЯ СТРУКТУРА -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/primary"
        android:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_practice"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/white"
            app:title="Практика"
            android:background="@color/primary">

            <!-- КНОПКА НАЗАД -->
            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_left_arrow"
                app:tint="@color/white"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Назад"
                android:scaleType="fitCenter"
                android:padding="8dp"
                android:layout_gravity="start"
                android:layout_marginEnd="16dp" />

            <!-- Виджет статистики (ОРИГИНАЛЬНЫЙ ВКЛЮЧАЕМЫЙ МАКЕТ) -->
            <include layout="@layout/widget_user_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"/>

            <!-- СКРЫТЫЙ ЭЛЕМЕНТ: star_icon для совместимости с LessonPlayActivity.java -->
            <ImageView
                android:id="@+id/star_icon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:contentDescription="Скрытая иконка статуса"/>

        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content Area -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:clipToPadding="false"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Заголовок Практики (lesson_title) -->
            <TextView
                android:id="@+id/lesson_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                tools:text="Урок 1.2: SELECT (Практика)" />

            <!-- СКРЫТОЕ ОПИСАНИЕ (lesson_description) для LessonPlayActivity.java -->
            <TextView
                android:id="@+id/lesson_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:text="Инструкция для задания" />

            <!-- 2. Виртуальная База Данных (Исходная таблица) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Исходные данные (Таблица: Воины)"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp"/>

                    <!-- Здесь будет отображаться исходная таблица БД -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_source_table"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:background="@color/fon"
                        android:padding="4dp"
                        tools:listitem="@layout/item_table_row"
                        tools:itemCount="3"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 3. Список Заданий -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Задания для выполнения:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_dark"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_tasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_task_card"
                tools:itemCount="3"/>

            <!-- 4. Секция Ввода Запроса (sql_input) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Твой SQL-запрос:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Заголовок запроса -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Редактор кода"
                        android:textColor="@color/white"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:background="@color/primary_dark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Поле ввода SQL-запроса (sql_input) -->
                    <EditText
                        android:id="@+id/sql_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="120dp"
                        android:background="@color/fon"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:hint="SELECT ..."
                        android:padding="12dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:fontFamily="monospace"
                        tools:text="SELECT name, level FROM warriors;" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- 5. Область действий (Кнопки) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Кнопка проверки/продолжения (check_button) -->
                <Button
                    android:id="@+id/check_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Выполнить и Проверить"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/primary"/>

                <Button
                    android:id="@+id/button_hint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Получить подсказку"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/primary_dark"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>


            <!-- 6. Результат/Статус -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Результат выполнения:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Индикатор загрузки (progress_bar) -->
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:layout_marginBottom="8dp"/>

            <!-- Контейнер статуса (status_layout) и Сообщение о статусе (status_message) - УДАЛЕН BACKGROUND -->
            <LinearLayout
                android:id="@+id/status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/fon"
                android:gravity="center_vertical"
                tools:background="#4CAF50">

                <TextView
                    android:id="@+id/status_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    tools:text="Ожидание выполнения запроса..."/>
            </LinearLayout>

            <!-- 7. Result Table (result_table) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/result_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@color/fon"
                android:padding="4dp"
                tools:listitem="@layout/item_table_row"
                tools:itemCount="5"
                tools:layout_height="200dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>